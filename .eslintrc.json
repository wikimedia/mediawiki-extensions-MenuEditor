{
	"root": true,
	"extends": [
		"wikimedia/client-es5",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"rules": {
		"no-undef": "warn",
		"es-x/no-regexp-prototype-flags": "warn",
		"es-x/no-string-prototype-includes": "warn",
		"es-x/no-array-prototype-includes": "warn",
		"no-jquery/no-extend": "warn",
		"es-x/no-object-assign": "warn"
	},
	"globals": {
		"ext": "readonly",
		"mediaWiki": "readonly",
		"OOJSPlus": "readonly",
		"jQuery": "readonly"
	}
}
